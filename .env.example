# App
PORT=3000
APP_VERSION=0.1.0
LOG_LEVEL=info
DATA_DIR=./data

# Shopify
SHOPIFY_SHOP_DOMAIN=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_...
SHOPIFY_WEBHOOK_SECRET=...
# Defaults to Shopify's latest stable Admin API version at time of writing
SHOPIFY_API_VERSION=2025-10
# real = call Shopify Admin API, mock = local/demo mode
SHOPIFY_MODE=real
# Demo/testing only
SHOPIFY_MOCK_DEFAULT_FULFILLMENT_STATUS=FULFILLED

# Fishbowl Advanced
FISHBOWL_BASE_URL=https://your-fishbowl-host:2456
FISHBOWL_USERNAME=
FISHBOWL_PASSWORD=

# Fishbowl fulfillment via Import endpoint
# This is the default name of a Fishbowl import/export (spaces replaced with '-')
FISHBOWL_FULFILLMENT_IMPORT_NAME=Your-Import-Name
# Comma-separated header names expected by that import
FISHBOWL_IMPORT_HEADERS=OrderNumber,TrackingNumber,Carrier,ShipDate
# A row template that uses {{placeholders}}. The app will replace these.
FISHBOWL_IMPORT_ROW_TEMPLATE={{orderNumber}},{{trackingNumber}},{{carrier}},{{shipDate}}

# Email alerts (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
ALERT_TO_EMAIL=you@domain.com
ALERT_FROM_EMAIL=bot@domain.com
