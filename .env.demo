# Demo environment (safe to commit)
PORT=3000
APP_VERSION=0.1.2-demo-fix
LOG_LEVEL=info
DATA_DIR=./data

# Shopify (MOCK)
SHOPIFY_MODE=mock
SHOPIFY_SHOP_DOMAIN=demo.myshopify.com
SHOPIFY_ACCESS_TOKEN=dummy
SHOPIFY_WEBHOOK_SECRET=demo-secret
SHOPIFY_API_VERSION=2025-10
SHOPIFY_MOCK_DEFAULT_FULFILLMENT_STATUS=FULFILLED

# Fishbowl (MOCK)
FISHBOWL_BASE_URL=http://127.0.0.1:2456
FISHBOWL_USERNAME=demo
FISHBOWL_PASSWORD=demo
FISHBOWL_APP_NAME=Shopify Fishbowl Fulfillment Bridge
FISHBOWL_APP_DESCRIPTION=Demo Bridge
FISHBOWL_APP_ID=9001

# Fishbowl fulfillment via Import endpoint
FISHBOWL_FULFILLMENT_IMPORT_NAME=Demo-Fulfillment
FISHBOWL_IMPORT_HEADERS=OrderNumber,TrackingNumber,Carrier,ShipDate
FISHBOWL_IMPORT_ROW_TEMPLATE={{orderNumber}},{{trackingNumber}},{{carrier}},{{shipDate}}

# Fishbowl mock controls
FISHBOWL_MOCK_PORT=2456
FISHBOWL_MOCK_HOST=127.0.0.1
FISHBOWL_MOCK_FAIL_ORDER_NUMBERS=9999

# Email alerts (disabled in demo)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
ALERT_TO_EMAIL=
ALERT_FROM_EMAIL=
